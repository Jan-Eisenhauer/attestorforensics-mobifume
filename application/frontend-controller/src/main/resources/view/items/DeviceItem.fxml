<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="deviceItem" styleClass="roundItem"
            xmlns="http://javafx.com/javafx/8.0.191"
            fx:controller="com.attestorforensics.mobifume.controller.item.DeviceItemController">
    <children>
        <ImageView fx:id="deviceImage" fitHeight="100.0" fitWidth="100.0" onMouseClicked="#onMouseClicked"
                   pickOnBounds="true" preserveRatio="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                   AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <image>
                <Image url="@../../images/Base_Bad.png"/>
            </image>
        </ImageView>
        <Button fx:id="errorButton" alignment="BOTTOM_RIGHT" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false"
                onAction="#onErrorInfo" style="-fx-background-color: transparent;" visible="false"
                AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0">
            <graphic>
                <ImageView fx:id="errorIcon" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true"/>
            </graphic>
        </Button>
    </children>
    <stylesheets>
        <URL value="@../style/DefaultApp.css"/>
        <URL value="@../style/Controls.css"/>
        <URL value="@../style/Item.css"/>
    </stylesheets>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
</AnchorPane>
